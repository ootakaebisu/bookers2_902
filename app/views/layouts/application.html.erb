<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2902</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <script src="https://kit.fontawesome.com/45c58c3b7f.js" crossorigin="anonymous"></script>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav>
        <% if user_signed_in? %>
          <div class="container px-3 mx-3 ">
            <div class="logo"><%= link_to "Bookers", user_path(current_user), class: "link" %></div>
            <ul>
              <li><i class="fas fa-home"></i><%= link_to "Home", user_path(current_user), class: "link" %></li>
              <li><%= link_to "Users", users_path, class: "link" %></li>
              <li><%= link_to "Books", books_path, class: "link" %></li>
              <li><%= link_to "logout", destroy_user_session_path, method: :delete, class: "link" %></li>
            </ul>
          </div>
        <% else %>
          <div class="container">
            <div class="logo"><%= link_to "Bookers", root_path, class: "link" %></div>
            <ul>
              <li><i class="fas fa-home"></i> <%= link_to "Home", root_path, class: "link" %></li>
              <li><%= link_to "About", users_about_path, class: "link" %></li>
              <li><%= link_to "sign up", new_user_registration_path, class: "link" %></li>
              <li><%= link_to "login", new_user_session_path, class: "link" %></li>
            </ul>
          </div>
        <% end  %>
      </nav>
    </header>

    <main>
      <div class="container px-5 px-sm-0">
        <div class="row"><%= yield %></div>
      </div>
    </main>

    <footer>
      <div class ="container justify-content-center">
        <div>CopyRight Infratop.inc</div>
      </div>
    </footer>
  </body>
</html>
