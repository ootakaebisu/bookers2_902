<h1>Editing Book</h1>

<%= form_with model: @book, lacal:true do |f| %>
  <div class="form-group">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>

   <div class="form-group">
    <%= f.label :opinion %><br>
    <%= f.text_area :opinion %>
  </div>

   <div class="form-group">
    <%= f.submit "UpdateBook" %>
  </div>
<% end %>

