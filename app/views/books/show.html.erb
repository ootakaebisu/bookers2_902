<div class="col-md-3">
  <%= render "layouts/left", user: @user %>
</div>

<div class="col-md-8 offset-md-1">
  <h2>Book detail</h1>
  <table class="table">
    <tr>
      <td>
        <%= attachment_image_tag @book.user, :image, format: "jpeg", size: "40x40" %><br>
        <%= link_to @book.user.name, user_path(@book.user_id) %>
      </td>
      <td><%= link_to @book.title, book_path(@book.id) %></td>
      <td><%= @book.opinion %></td>
      <% if @book.user == current_user %>
        <td><%= link_to "Edit", edit_book_path(@book.id), class:  "btn btn-sm btn-success" %></td>
        <td><%= link_to "Destroy", book_path(@book.id), method: :delete, data: { confirm: "本当に削除しますか？" }, class: "btn btn-sm btn-danger" %></td>
      <% end %>
    </tr>
  </table>
</div>




