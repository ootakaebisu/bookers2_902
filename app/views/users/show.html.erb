<div class="col-md-3">
  <%= render "layouts/left", user: @user %>
</div>

<div class="col-md-8 offset-md-1">
  <h2>Books</h1>
  <table class="table">
    <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td><%= attachment_image_tag book.user, :image, format: 'jpeg', size: "40x40" %></td>
          <td><%= link_to book.title, book_path(book.id) %></td>
          <td><%= book.opinion %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>








