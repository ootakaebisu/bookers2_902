<div class= "left">
  <%= render "layouts/left", user: @user %>
</div>

<h1>Users#show</h1>
<table>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td></td>
        <td><%= link_to book.title, book_path(book.id) %></td>
        <td><%= book.opinion %></td>
      </tr>
    <% end %>
  </tbody>
</table>


